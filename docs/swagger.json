                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully registered a user!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "66bbe94665f3decb86837404"
                        },
                        "name": {
                          "type": "string",
                          "example": "Artem"
                        },
                        "email": {
                          "type": "string",
